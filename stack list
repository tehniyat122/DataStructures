
#include <stdio.h>

struct node
{
    int data;
    struct node* next;
    
};

struct node* head;
void push()
{
    int item;
    struct node* ptr=(struct node*)malloc(sizeof(struct node));
    if(ptr == NULL)
    {
        printf("Memory Overflow");
    }
    printf("Enter the item to push: ");
    scanf("%d",&item);
     ptr->data=item;
    if(head == NULL)
    {
     
      ptr->next=NULL;
      head=ptr;
    }
    else
    {
        ptr->next=head;
        head=ptr;
    }
   
}
void pop()
{
    if(head == NULL)
    {
        printf("Empty stack");
        return;
    }
    struct node* temp=head;
    if(temp->next == NULL)
    {
        head=NULL;
        free(temp);
    }
    else
    {
        head=temp->next;
        free(temp);
    }
}

void peek()
{
    struct node* temp=head;
   if(temp == NULL)
   {
       printf("Empty stack");
   }
   else
   {
       while(temp->next != NULL)
       {
           printf("%d \t",temp->data);
           temp=temp->next;
       }
   }
}
int main()
{
    int choice=0;
    while(choice != 4)
    {
        printf("Enter the choices: \n 1.push \n 2.pop \n 3.peek \n ");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
            {
                push();
                break;
            }
            
            case 2:
            {
                pop();
                break;
            }
            case 3:
            {
                peek();
                break;
            }
            
        }
    }

    return 0;
}

